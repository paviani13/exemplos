<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dip"
    tools:context="com.example.rogerpaviani.meuapp72.MainActivity">

    <TextView
        android:id="@+id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: " />

    <EditText
        android:text="Digite o seu nome"
        android:textSize="15sp"
        android:layout_toRightOf="@id/txt_nome"
        android:layout_alignBaseline="@id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText" />

    <TextView
        android:paddingTop="20dip"
        android:id="@+id/txt_endereco"
        android:layout_below="@id/txt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço: " />

    <EditText
        android:text="Digite o seu endereço"
        android:textSize="15sp"
        android:layout_toRightOf="@id/txt_endereco"
        android:layout_alignBaseline="@id/txt_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="30dip"
        android:layout_below="@id/txt_endereco"
        android:id="@+id/btn_enviar"
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_toRightOf="@id/btn_enviar"
        android:layout_alignBaseline="@id/btn_enviar"
        android:text="Limpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
